{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:sentinel:schema:internal:appeal-resolution",
  "title": "AppealResolution",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "status",
    "resolution_code",
    "resolution_reason_codes",
    "reviewer_actor",
    "resolved_at"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["resolved_upheld", "resolved_reversed", "resolved_modified"]
    },
    "resolution_code": {"type": "string", "minLength": 1, "maxLength": 128},
    "resolution_reason_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^R_[A-Z0-9_]+$"
      }
    },
    "reviewer_actor": {"type": "string", "minLength": 1},
    "resolved_at": {"type": "string", "format": "date-time"}
  }
}
