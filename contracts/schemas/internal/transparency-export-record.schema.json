{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sentinel.dev/schemas/internal/transparency-export-record.schema.json",
  "title": "TransparencyExportRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "appeal_id",
    "status",
    "original_action",
    "original_reason_codes",
    "artifact_versions",
    "request_id",
    "original_decision_id",
    "transition_count",
    "created_at",
    "resolved_at"
  ],
  "properties": {
    "appeal_id": {"type": "integer", "minimum": 1},
    "status": {
      "type": "string",
      "enum": [
        "submitted",
        "triaged",
        "in_review",
        "rejected_invalid",
        "resolved_upheld",
        "resolved_reversed",
        "resolved_modified"
      ]
    },
    "original_action": {
      "type": "string",
      "enum": ["ALLOW", "REVIEW", "BLOCK"]
    },
    "original_reason_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^R_[A-Z0-9_]+$"
      }
    },
    "resolution_status": {
      "type": ["string", "null"],
      "enum": ["resolved_upheld", "resolved_reversed", "resolved_modified", null]
    },
    "resolution_code": {"type": ["string", "null"]},
    "resolution_reason_codes": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "pattern": "^R_[A-Z0-9_]+$"
      }
    },
    "artifact_versions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["model", "lexicon", "policy", "pack"],
      "properties": {
        "model": {"type": "string", "minLength": 1},
        "lexicon": {"type": "string", "minLength": 1},
        "policy": {"type": "string", "minLength": 1},
        "pack": {
          "type": "object",
          "additionalProperties": {"type": "string", "minLength": 1}
        }
      }
    },
    "request_id": {"type": ["string", "null"]},
    "original_decision_id": {"type": ["string", "null"]},
    "transition_count": {"type": "integer", "minimum": 0},
    "created_at": {"type": "string", "format": "date-time"},
    "resolved_at": {"type": ["string", "null"], "format": "date-time"}
  }
}
